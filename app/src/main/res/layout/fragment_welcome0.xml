<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:id="@+id/welcome1_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/welcome1_icon_imageview"
                android:layout_width="230dp"
                android:layout_height="230dp"
                android:layout_gravity="center"
                android:layout_marginBottom="-40dp"
                android:layout_weight="0"
                android:src="@drawable/ic_icon"
                android:tint="@color/colorText2" />

            <com.kd.easybarrage.BarrageView
                android:id="@+id/barrageview"
                android:fitsSystemWindows="true"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="20dp"
                app:allow_repeat="true"
                app:border_color="@null"
                app:line_height="16dp"
                app:max_text_size="16"
                app:min_text_size="12"
                app:random_color="false"
                app:size="500"/>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                app:cardCornerRadius="@dimen/cardview_radius"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/welcome_start_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0"
                    android:background="@drawable/bgstyle_md2"
                    android:elevation="0dp"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="@string/welcome_start" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>